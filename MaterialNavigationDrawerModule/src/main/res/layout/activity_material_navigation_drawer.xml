<it.neokree.materialnavigationdrawer.util.MaterialDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false" >

    <!-- Framelayout per la visualizzazione -->
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusMargin"
            android:background="?attr/colorPrimary" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            android:layout_below="@+id/statusBar"
            android:visibility="gone"
            >
        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/mCustomActionbar"
            android:layout_width="match_parent"
            android:background="#ff7f66"
            android:layout_height="?android:attr/actionBarSize" android:layout_below="@+id/statusBar">
            <RelativeLayout android:id="@+id/mCommonHeaderHome" android:layout_width="52dp" android:layout_height="52dp" android:gravity="left|center_vertical" android:layout_marginLeft="8dp">
                <ImageView  android:layout_width="28dp" android:layout_height="22dp" android:layout_marginLeft="8dp"   android:src="@drawable/left_menu_avatar"/>
            </RelativeLayout>
            <TextView android:id="@+id/mCommonHeaderTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="主页" android:layout_centerInParent="true" android:textSize="22sp" android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/mCommonHeaderSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_menu_search"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mCustomActionbar"/>

    </RelativeLayout>

    <!-- RelativeLayout per il drawer da visualizzare -->
    <include layout="@layout/layout_drawer" />

</it.neokree.materialnavigationdrawer.util.MaterialDrawerLayout>