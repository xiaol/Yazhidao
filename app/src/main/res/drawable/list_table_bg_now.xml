<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />
            <gradient android:startColor="#000000" android:endColor="#ffffff" android:angle="270"  android:type="sweep" android:centerColor="#55000000" android:centerX="320" android:centerY="200"/>
        </shape>
    </item>
    <item android:bottom="6dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>