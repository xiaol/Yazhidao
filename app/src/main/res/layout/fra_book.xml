<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_sign"
        android:layout_width="match_parent"
        android:layout_height="500dip" 
        android:background="@drawable/sign_background"
        >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:text="选择标签"
            android:textColor="#ffffff"
            android:textSize="25dip" />

        <TextView
            android:id="@+id/tv_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="定制你的专属频道"
            android:textSize="25dip" />

        <ImageView
            android:id="@+id/iv_background"
            android:layout_below="@id/tv_description2"
            android:padding="10dip"
            android:layout_marginTop="50dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:background="@drawable/sign_mark"
             />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/ll_config"
        android:layout_below="@id/rl_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_cinfig"
        android:orientation="horizontal" />

</RelativeLayout>