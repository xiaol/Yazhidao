<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:paddingRight="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mNewsDetailPraisePlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mNewsDetailPraiseWrapper"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:text="+1"
        android:textColor="@color/common_theme_color"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mNewsDetailPraiseWrapper"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/mNewsDetailShare"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mNewsDetailPraiseImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:src="@drawable/news_list_table_cell_unpraised" />

        <TextView
            android:id="@+id/mNewsDetailPraiseTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:drawablePadding="5dp"
            android:text="8989人热赞"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mNewsDetailShare"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="7dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="18dp"
            android:src="@drawable/news_detail_share" />

    </FrameLayout>
</RelativeLayout>