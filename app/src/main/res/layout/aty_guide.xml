<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minHeight="120dp">

            <com.news.yazhidao.widget.TextViewExtend
                app:customFont="FZLTXHK.TTF"
                android:id="@+id/login_sina_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博登录"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/edit_margin"
                android:textSize="@dimen/textsize_sixteen"
                android:drawableTop="@drawable/ic_sina"
                android:textColor="@color/black"
                android:gravity="center" />

            <!--<com.news.yazhidao.widget.TextViewExtend-->
            <!--app:customFont="FZLTXHK.TTF"-->
            <!--android:id="@+id/login_qq_textView"-->
            <!--android:layout_width="@dimen/big_button_width"-->
            <!--android:layout_height="@dimen/big_button_height"-->
            <!--android:text="QQ登录"-->
            <!--android:layout_gravity="center"-->
            <!--android:visibility="invisible"-->
            <!--android:layout_marginTop="@dimen/edit_margin"-->
            <!--android:background="@drawable/bg_login_green_solid_btn"-->
            <!--android:textSize="@dimen/textsize_sixteen"-->
            <!--android:textColor="@color/white"-->
            <!--android:gravity="center" />-->

            <com.news.yazhidao.widget.TextViewExtend
                app:customFont="FZLTXHK.TTF"
                android:id="@+id/login_weixin_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/edit_margin"
                android:textSize="@dimen/textsize_sixteen"
                android:drawableTop="@drawable/ic_weixin"
                android:textColor="@color/black"
                android:gravity="center" />
        </LinearLayout>

        <com.news.yazhidao.widget.TextViewExtend
            app:customFont="FZLTXHK.TTF"
            android:id="@+id/main_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="@dimen/textsize_fifteen"
            android:textColor="@color/bg_gray"
            android:text="立即体验>>" />

        <LinearLayout
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" />

    </LinearLayout>

</RelativeLayout>